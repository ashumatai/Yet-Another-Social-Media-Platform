<!-- Posts -->

<div class="container myposts mt-2">
    <div class="row">
        
       
            {{#each postData}}
                 <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 mb-4">
                    <div class="card" >
                        <img src="../..{{postContent}}" class="card-img-top" alt="post content">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div class="d-flex flex-row align-items-center">
                                    <div class="userProfile"><img src="../..{{profilePicture}}"  alt="user profile"></div>
                                    <div class="ms-2 ml-2 ">
                                        <h6 class="mb-0">{{userName}}</h6> <span>{{date}}</span>
                                    </div>
                                </div>
                                <div class="badge"> <span>{{tags}}</span> </div>
                            </div>
                            <div class="card-text mt-4"> {{caption}}</div>
                            <div class="d-flex justify-content-stretch mt-4 mb-2">
                                    
                                        {{#if hasLiked}}
                                            <a class="mr-2 likesBtn" name="{{_id}}"><i class="fa-solid fa-heart fa-lg" style="color:red"></i>
                                                {{#if noOfLikes}}
                                                    <p class="mr-2 no_likes">{{noOfLikes}} </p>
                                                    {{else}}
                                                    <p class="mr-2 no_likes"> 0 </p>
                                                {{/if}}
                                            </a>
                                        {{else}}
                                            <a class="mr-2 likesBtn" name="{{_id}}"><i class="fa-solid fa-heart fa-lg" style="color:white"></i>
                                                 {{#if noOfLikes}}
                                                    <p class="mr-2 no_likes">{{noOfLikes}} </p>
                                                    {{else}}
                                                    <p class="mr-2 no_likes"> 0 </p>
                                                {{/if}}
                                            </a>
                                        {{/if}}
                                        
                                        <a class="ml-4 commentsBtn" name="{{_id}}" data-toggle="modal" data-target="#commentModal"><i class="fa-solid fa-comment fa-lg"></i>
                                            <p class="mr-2 no_comments">{{comments.length}}</p>
                                        </a>
                                        <a class="ml-4 shareBtn" name="{{_id}}" data-toggle="modal" data-target="#shareModal"><i class="fas fa-share fa-lg"></i></a>
                                        {{#if savedPosts}}
                                            
                                            <a class="ml-4 savedPostBtn" id="{{_id}}"><i class="fa-solid fa-bookmark fa-lg " style="color:black"></i>
                                                
                                            </a>
                                            {{else}}
                                            <a class="ml-4 savedPostBtn" id="{{_id}}"><i class="fa-solid fa-bookmark fa-lg " style="color:white"></i>
                                               
                                            </a>
                                        {{/if}}
                                       
                                        
                                        
                            </div>
                            <div class="d-flex justify-content-stretch mt-4 mb-2">
                                    
                                        
                                        
                                        
                                       
                                        
                                        
                            </div>
                        </div>
                    </div>

                </div>
            {{/each}}
       
       
        </div>
    </div>
</div>

{{!-- Comment Modal --}}

<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="commentModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="commentModalLabel">Comments</h5>
        <button type="button" class="close commentClose" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container row allComments">
          
        </div>

        <form id="addComment" action="#">
            <label for="comment">Comment:</label><br>
            <input type="text" id="comment" name="comment"><br><br>
            <button type="submit" class="btn btn-primary">Save Comment</button>
        </form> 
        <p class="error"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary commentClose" data-dismiss="modal">Close</button>
       
      </div>
    </div>
  </div>
</div>

