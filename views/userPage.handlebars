    <div class="container myposts mt-2">
        <div class="row">
            {{#each userPosts}}
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 mb-4">

                <div class="card">
                    <img src={{this.postContent}} class="card-img-top" alt="...">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center">
                                <div class="userProfile"><img src={{this.postContent}} alt="..."></div>
                                <div class="ms-2 ml-2 ">
                                    <h6 class="mb-0">{{userName}}</h6> <span>{{date}}</span>
                                </div>
                            </div>
                            <div class="badge"> <span>{{tags}}</span> </div>
                        </div>
                        <div class="card-text mt-4"> {{caption}}</div>
                        <div class="d-flex justify-content-stretch mt-4 mb-2">

                            {{#if hasLiked}}
                            <a class="mr-2 likesBtn" name="{{_id}}"><i class="fa-solid fa-heart fa-lg"
                                    style="color:red"></i></a>
                            {{else}}
                            <a class="mr-2 likesBtn" name="{{_id}}"><i class="fa-solid fa-heart fa-lg"
                                    style="color:white"></i></a>
                            {{/if}}
                            <a class="ml-4" href="#"><i class="fa-solid fa-comment fa-lg"></i></a>
                            <a class="ml-4" href="#"><i class="fas fa-share fa-lg"></i></a>
                            {{#if savedPosts}}

                            <a class="ml-4 savedPostBtn" id="{{_id}}"><i class="fa-solid fa-bookmark fa-lg "
                                    style="color:black"></i></a>
                            {{else}}
                            <a class="ml-4 savedPostBtn" id="{{_id}}"><i class="fa-solid fa-bookmark fa-lg "
                                    style="color:white"></i></a>
                            {{/if}}

                        </div>
                    </div>
                </div>

            </div>
            {{/each}}


        </div>
    </div>
    </div>


